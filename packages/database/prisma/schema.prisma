// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Church {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  settings  String?  // JSON string for settings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users              User[]
  ghostAuthorMappings GhostAuthorMapping[]
  subscriptions      Subscription[]
  userRoles          UserRole[]

  @@index([slug])
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String?
  ghostMemberId String?  @unique // Ghost Members API ID
  churchId     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  church         Church              @relation(fields: [churchId], references: [id], onDelete: Cascade)
  roles          UserRole[]
  ghostAuthorMapping GhostAuthorMapping?
  subscriptions  Subscription[]

  @@index([email])
  @@index([churchId])
  @@index([ghostMemberId])
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique // CHURCH_ADMIN, CREATOR, MEMBER
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users UserRole[]

  @@index([name])
}

model UserRole {
  userId   String
  roleId   String
  churchId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)
  church Church @relation(fields: [churchId], references: [id], onDelete: Cascade)

  @@id([userId, roleId, churchId])
  @@index([userId])
  @@index([churchId])
}

model GhostAuthorMapping {
  id            String   @id @default(uuid())
  ghostAuthorId String   @unique // Ghost author ID
  churchId      String
  userId        String   @unique // creator user
  createdAt     DateTime @default(now())

  church Church @relation(fields: [churchId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([ghostAuthorId])
  @@index([churchId])
  @@index([userId])
}

model Subscription {
  id            String   @id @default(uuid())
  userId        String
  churchId      String
  ghostMemberId String   // Ghost Members API member ID
  isActive      Boolean  @default(true)
  preferences   String?  // JSON string for preferences
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  church Church @relation(fields: [churchId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([churchId])
  @@index([ghostMemberId])
}

